    "emoji-picker",
    "smiley-input",
    "emoji-input",
    "emoji-input-component",
    "react-emoji-input",
    "react-smiley-input",
    "react-input-emoji"
  ],
  "author": "awebcode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/awebcode/smiley-input"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "emoji-picker-react": "^4.12.0",
    "tailwindcss": "^3.4.17"
  }
